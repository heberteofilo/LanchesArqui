@model Lanche

<div class="container">
    <div class="row">
        <div class="card">
            <div class="text-center view overlay hm-white-slight">
                <img src="@Model.ImagemUrl" class="img-fluid" alt="">
                <a href="#">
                    <div class="mask waves-effect waves-light"></div>
                </a>
            </div>
            <div class="card-body">
                <!--Title-->
                <h2 class="card-title">@Model.Nome</h2>
                <!--Text-->
                <p class="card-text"><h3>@Model.DescricaoDetalhada</h3></p>
                <p class="btn btn-group" style="margin-left:32.7rem">
                    <a asp-controller="Lanche" asp-action="List" class="btn btn-outline-secondary">Ver todos os lanches</a>
                    <a class="btn btn-primary" id="cartButton" asp-controller="CarrinhoCompra" 
                                                               asp-action="AdicionarItemNoCarrinhoCompra" 
                                                               asp-route-lancheId="@Model.Id">
                        Adicionar @Model.Nome ao carrinho
                    </a>
                </p>
            </div>
        </div>
    </div>
</div>



